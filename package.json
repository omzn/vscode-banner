{
  "name": "vscode-banner",
  "displayName": "vscode-banner",
  "description": "Banner function name as a comment",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-banner.bannerFunction",
        "title": "Banner function name as a comment"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "vscode-banner configuration",
      "properties": {
          "extension.bannerCommand": {
              "type": "string",
              "default": "figlet -l -w 240 -f univers ",
              "description": "External command for banner"
          },
          "extension.commentBegin": {
            "type": "string",
            "default": "/*",
            "description": "Symbols to begin comment"
          },
          "extension.commentEnd": {
            "type": "string",
            "default": "*/",
            "description": "Symbols to end comment"
          }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
